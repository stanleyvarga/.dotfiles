# you-should-use - reminds you to use aliases
if [ ! -d "${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/you-should-use" ]; then
    git clone git@github.com:MichaelAquilina/zsh-you-should-use.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/you-should-use
fi

# fd-zsh - aliases for fd
if [ ! -d "${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/fd-zsh" ]; then
    git clone git@github.com:MohamedElashri/fd-zsh.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/fd-zsh
fi

# zsh-defer - lazy loading for ZSH
if [ ! -d "${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-defer" ]; then
    git clone git@github.com:romkatv/zsh-defer.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-defer
fi
