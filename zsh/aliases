## Better cat alternative with syntqx highlighting
alias bat="bat --theme=OneHalfDark -pn --style='full'"
alias cat="bat"

alias week='date +%V'

## Network
alias localip="ipconfig getifaddr en0"

## System
alias runp='lsof -ni'
alias sshdir='cd ~/.ssh'
alias copyssh="pbcopy < $HOME/.ssh/id_rsa.pub"
alias rm='trash'

## Get beautiful weather reporting 
alias wttr="curl wttr.in"
