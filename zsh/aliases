alias ezs="code ~/.zshrc"
alias czs="cat ~/.zshrc"
alias rzs="cat ~/.dotfiles/zsh/.zshrc > ~/.zshrc && source ~/.zshrc"
alias c="clear" # clear terminal
alias x="exit" # closes terminal

