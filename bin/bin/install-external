#!/bin/zsh

set -e

DOTFILES_EXTERNAL_DIR=$HOME/.dotfiles/external

if [ ! -d "$DOTFILES_EXTERNAL_DIR/wallpaper-ngn" ]; then
  echo "ðŸ”§ Cloning wallpaper-ngn repository"
  git clone git@github.com:stanleyvarga/wallpaper-ngn.git $DOTFILES_EXTERNAL_DIR/wallpaper-ngn
else
  echo "ðŸ“‚ wallpaper-ngn repository already exists, pulling latest changes"
  cd $DOTFILES_EXTERNAL_DIR/wallpaper-ngn && git pull
fi

ln -sf $DOTFILES_EXTERNAL_DIR/wallpaper-ngn/wp-ngn ~/.dotfiles/bin/bin/wp-ngn

chmod +x $DOTFILES_EXTERNAL_DIR/wallpaper-ngn/install.sh
$DOTFILES_EXTERNAL_DIR/wallpaper-ngn/install.sh
